  <interface name="zwlr_damage_stream_v1" version="1">
    <description summary="damage stream subscription">
      Gets the damage events
    </description>

    <event name="damage">
      <description summary="a damage notification">
        Damage has been done. Notify subscribers.
      </description>

      <arg name="region" type="object" interface="wl_region"/>
    </event>

    <request name="destroy" type="destructor">
      <description summary="delete this object">
        Unreference the subscription
      </description>
    </request>
  </interface>
</protocol>
